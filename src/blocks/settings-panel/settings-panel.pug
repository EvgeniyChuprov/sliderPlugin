include ../range-slider/range-slider

mixin settings-panel(options)

  .slider.js-slider
    form.slider__form
      .slider__block.slider__block_top
        span.slider__text Tooltip:
        input.js-slider__tooltip(type="checkbox") 
        span.slider__text Two handles:
        input.js-slider__is-double(type="checkbox")
        span.slider__text Vertical:
        input.js-slider__vertical(type="checkbox")
      .slider__block.slider__block_bottom 
        span.slider__text Min:
        input.slider__min.js-slider__min(type="number" value="")
        span.slider__text Max:
        input.slider__max.js-slider__max(type="number" value="")
        span.slider__text Step:
        input.slider__step.js-slider__step(type="number" value="")
        span.slider__text Handle:
        input.slider__handle.js-slider__handle(type="number" value="")
        span.slider__text.js-slider__text Second handle:
        input.slider__second-handle.js-slider__second-handle(type="number" value="")
      .slider__plugin
        +range-slider(options)

